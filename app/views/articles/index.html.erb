<div style="margin-left: 45%">
<%= link_to '+Add New Article', new_article_path %><br/><br/>
<table border="1">
  <tr>
    <td>Title</td>
    <td>Body</td>
    <td>Author</td>
    <td>Show</td>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(id: article.id) %></td>
    </tr>
  <% end %>
</table>
</div>